@model GETForms.Web.Models.CustomerSearch
@{
    ViewData["Title"] = "Index";
}

<h2>Search</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResult" method="get">
            <div class="form-group">
                <label asp-for="Search" class="control-label"></label>
                <input asp-for="Search" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SortBy"></label>
                <select asp-for="SortBy" asp-items="Model.SortByOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>